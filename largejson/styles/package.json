{
  "name": "bloglohika",
  "version": "0.1.0",
  "description": "Example on using create-react-app with a Node Express Backend",
  "author": {
    "name": "Nataliia Svystun",
    "email": "nat20088@gmail.com",
    "url": "https://svystun.nsp.ua/"
  },
  "private": true,
  "dependencies": {
    "express": "^4.16.4",
    "mongodb": "^3.1.8",
    "node-sass": "^4.9.4",
    "sass": "^1.14.3"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NataliiaSvystun/blogLohika"
  },
  "scripts": {
    "client": "cd client && npm run start",
    "server": "nodemon server.js",
	"sass" : "sass --watch client/src/styles/scss:src/styles/css"
    "start": "node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\" \"npm run sass\""
  }
}
